{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@lib/suka-lib": [
        "libs/suka-lib/src"
      ],
      "@lib/suka-lib/*": [
        "libs/suka-lib/src/*"
      ]
    }
  }
}
